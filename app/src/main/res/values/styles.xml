<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--app启动页-->
    <style name="AppUpstart" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/asos_ad</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="chat_content_date_style">
        <item name="android:minHeight">36dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="ChatDetailItemHit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/chat_detail_item_hit_color</item>
    </style>

    <style name="ChatDetailItemContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/chat_detail_item_content_color</item>
        <item name="android:textColorHint">@color/chat_detail_item_content_color</item>
    </style>

    <style name="ChatDetailItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ChatDetailArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@mipmap/arrow</item>
    </style>

    <style name="default_input_style_with_bg">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">64</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/default_input_bg</item>
    </style>

    <style name="chat_item_send_layout">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="chat_item_sender_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@mipmap/head_icon</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="chat_content_style">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#373334</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>
    <style name="msg_text_style">
        <item name="android:maxWidth">225dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/chat_text_color</item>
    </style>

    <style name="chat_item_receive_layout">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="chat_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">10sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="chat_item_receiver_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@mipmap/head_icon</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="default_dialog_style">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="dialog_msg_alert_txt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">#4e4e4e</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/chat_send_time_bg</item>
    </style>

    <style name="item_text_info" parent="android:Widget.TextView">
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- personal个人中心页面 -->
    <style name="personal_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="LoadingDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="login_dialog_style">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
    </style>

    <declare-styleable name="drop_down_list_attr">
        <attr name="isDropDownStyle" format="boolean" />
        <attr name="isOnBottomStyle" format="boolean" />
        <attr name="isAutoLoadOnBottom" format="boolean" />
    </declare-styleable>

    <style name="MeInfoItemContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="round_check_box_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/round_check_box_bg</item>
        <item name="android:button">@null</item>
    </style>

    <style name="default_check_box_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/default_check_box_style</item>
        <item name="android:button">@null</item>
    </style>

    <style name="default_input_style">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">64</item>
        <item name="android:background">@drawable/invisible_input_bg</item>
    </style>

    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

</resources>
